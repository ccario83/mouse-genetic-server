
<% user ||= @user %>
<% group ||= user.groups.new %>
<% users ||= User.all %>
<% preselected ||= [] %>
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>New Group</h3>
</div>
<div class="modal-body" style="overflow: visible;">
	<%= simple_form_for group, :remote => true do |f| %>
		<%= f.association :users, :collection => users, :label => 'Members', :html_options => { :selected => preselected }, :input_html => { 'data-placeholder'=> 'Please start typing a member\'s name', :style => "width:515px;" } %>
		<%= f.input :name, :label => 'Name', :required => false, :input_html => { :style => 'width:500px', } %>
		<%= f.input :description, :label => 'Description', :required => false, :input_html => { :style => 'width:500px;', :rows => 5 } %>
	<% end %>
</div>
<div class="modal-footer">
	<input class="btn btn-primary" name="commit" type="submit" value="Submit">
</div>

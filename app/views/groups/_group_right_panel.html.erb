
					<div class="row-fluid">
						<div class="span5">
							<span class="title"> Members (<%= members.count %>)</span>
						</div>
						<div class="span5 icon-panel">
							<i class="icon-edit" onclick="$('#manage-members').modal('show'); return false;"></i>
						</div>
					</div>
					<div id="manage-members" class="modal hide">
						<%= render 'group_management_form', users: @users, type: 'users', preselected_ids: @member_ids %>
					</div>
					
					<div class="row-fluid">
						<div class="span12">
							<ul class="members">
								<%= render members %>
							</ul>
							<%= will_paginate members, :param_name => 'members_paginate' %>
						</div>
					</div>
					<hr>


					<div class="row-fluid">
						<div class="span5">
							<span class="title"> Tasks (<%= tasks.count %>)</span>
						</div>
						<div class="span5 icon-panel">
							<i class="icon-plus" onclick="$('#new-task').modal('show'); return false;"></i>
						</div>
					</div>
					<div id="new-task" class="modal hide">
						<%= render 'shared/task_form', task: task, members: members %>
					</div>

					<div class="row-fluid">
						<div class="span12">
							<% if tasks.any? %>
								<ol class="tasks">
									<%= render :partial =>'shared/task', :collection => tasks %>
								</ol>
							<%= will_paginate tasks, :param_name => 'tasks_paginate' , :inner_window => 1, :outer_window => 1 %>
							<% end %>
						</div>
					</div>


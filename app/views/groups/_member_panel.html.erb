
<% user ||= @user %>
<% group ||= @group %>
<% members ||= @members %> 
<% show_listing_on_load ||= false %>
<div class="title-bar">
	<div class="drop-panel">
		<i id="collapse-members" class="icon-chevron-down"></i>
	</div>
	<div class="title-panel">
		<span class="title"> Members </span>
	</div>
	<div class="icon-panel">
		<i class="icon-number"> <%= group.members.count %> </i>
		
		<i class="disabled icon-plus" data-toggle="modal" data-target="#new-group"></i>
		<% if (group.creator == user) %>
		<i class="icon-list"  data-toggle="modal" data-target="#edit-members"></i>
		<% else %>
		<i class="disabled icon-list"></i>
		<% end %>
	</div>
</div>
<div id="edit-members" class="modal hide fade">
	<%= render 'groups/member_management_form', members: members %>
</div>

<div id="member-listing" <% if not show_listing_on_load %> style="display:none;" <% end %>>
	<% if members.any? %>
	<ul class="members">
		<%= render members %>
	</ul>
	<%= will_paginate members, :param_name => 'members_paginate' %>
	<% end %>
</div>


					<div class="row-fluid my-user">
						<h3> Members (<%= members.count %>)&nbsp;&nbsp;&nbsp;&nbsp;
							<i id="group-add" class="icon-plus"></i>
							<i id="group-manage" class="icon-edit"></i>
						</h3>
						<div>
							<ul class="users">
								<%= render members %>
							</ul>
							<%= will_paginate members, :param_name => 'members_paginate' %>
						</div>
					</div>
					<hr>

					<div class="row-fluid">
						<h3> Tasks (<%= tasks.count %>)&nbsp;&nbsp;&nbsp;&nbsp;
							<i id="add-task" class="icon-plus"></i>
						</h3>
						<div id="new-task" style="display:none">
							<%= render 'shared/task_form', task: task %>
							<hr>
						</div>
					</div>

					<div class="row-fluid">
						<% if tasks.any? %>
							<ol class="tasks">
								<%= render :partial =>'shared/task', :collection => tasks %>
							</ol>
						<%= will_paginate tasks, :param_name => 'tasks_paginate' , :inner_window => 1, :outer_window => 1 %>
						<% end %>
					</div>



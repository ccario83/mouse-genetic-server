
// Flash any notices
<% flash.each do |alert_type, notice| %>
flash_notice("<%= notice %>", "<%= alert_type %>");
<% end %>

// Update both the job and datafile panels
update_div('#job-panel');
update_div('#datafile-panel');

// In case the job is currently being shown in the center panel, display a simple message
if($('#job_id').html() == "<%= @id %>")
{
	$('#center-panel').html('This job was deleted. Please choose another job or start a new job with the add job button.')
}





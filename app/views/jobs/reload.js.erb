// Flash any notices
<% flash.each do |alert_type, notice| %>
flash_notice("<%= notice %>", "<%= alert_type %>");
<% end %>

// Replace the job-panel html with updated information 
$("#job-panel").html("<%= escape_javascript(render :partial => 'shared/job_panel', :locals => { viewer: @user, show_listing_on_load: @show_listing_on_load }) %>");

// Rotate the arrow to the closed position if the panel is collapsed
<% if @show_listing_on_load == false %>
rotate($('#collapse-jobs'), 0, -5, -90);
<% end %>

// Reattach chosen functionality to the edit jobs group share box and reattach the submit 
$('.edit_job_groups').each(function() { $(this).chosen({ min_search_term_length: 2 }); })
$("[id^=edit-job]").each(function() { attach_submit(this.id); });

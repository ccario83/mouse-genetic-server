<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
		<title>BerndtLab | <%= @page_title %></title>

		<!-- Style Sheets -->
		<%= stylesheet_link_tag('bootstrap') %>
		<%= stylesheet_link_tag('bootstrap-responsive.min') %>
		<%= stylesheet_link_tag('main') %>
	
		<!-- JS/jQuery libraries -->
		<%= javascript_include_tag('jquery-1.7.min') %>
		<%= javascript_include_tag('jquery-ui-1.8.16') %>
		<%= javascript_include_tag('bootstrap') %>
	</head>

	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container-fluid">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</a>
					<a class="brand" href="#">Mouse Genetics Server</a>
					<div class="btn-group pull-right">
						<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
							<i class="icon-user"></i> Clint Cario
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to('Profile', '/') %></li>
							<li class="divider"></li>
							<li><a href="#">Sign Out</a></li>
						</ul>
					</div>
					<div class="nav-collapse">
						<ul class="nav">
							<li><%= link_to('Home', '/') %></li>
							<li><%= link_to('About', '/') %></li>
							<li><%= link_to('Contact','/') %></li>
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>
		</div>

		<div class="container-fluid">
			<div class="row-fluid">
			
				<!-- Left Panel -->
				<div class="span2 well">
					<%= render(:partial => "jobs_panel") %>
				</div>
				
				<!-- Center Panel-->
				<div class="span8">
					<%= yield %>
				</div>
				
				<!-- Right Panel -->
				<div class="span2 well">
					<%= render(:partial => "user_panel") %>
				</div>
					
			</div>

			<hr>
			<footer>
				<p>(c) 2012 University of Pittsburgh, Shapiro Group, Berndt Lab</p>
			</footer>
			
		</div> <!-- /container -->
	
	</body>
</html>

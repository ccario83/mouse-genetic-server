<% content_for :page_css do %>

<% end %>
<% content_for :page_js do %>
<script>
			var MPATH_ID_LIST = <%=raw @mpath_ids %>;
			var ANAT_ID_LIST = <%= @anat_ids %>;
			var ALL_STRAINS = <%=raw @all_strains %>;
			var VERY_YOUNGEST = <%= @very_youngest.nil? ? "null":@very_youngest %>;
			var VERY_OLDEST = <%= @very_oldest.nil? ? "null":@very_oldest %>;
		</script>
		<%= javascript_include_tag('underscore') %>
		<%= javascript_include_tag('highcharts/highcharts') %>
		<%= javascript_include_tag('highcharts/modules/exporting') %>

		<%= javascript_include_tag('phenotype_show') %>
<% end %>

<div class="container-fluid">
	<div class="row-fluid">
		<div class="span4 well">
			<div class="container-fluid">
				<div class="row-fluid">
					<h3> Phenotype Selection:</h3>
				</div>
				<div class="row-fluid">
					<table class="table table-striped">
						<tr>
							<td><b>Pathology</b></td>
							<td><span id="path-list"><%= PathBaseTerm.find(@mpath_ids).map { |x| x.term }.join(",") %></span></td>
						</tr>
						<tr>
							<td><b>Anatomy</b></td>
							<td><span id="anat-list"><%= MouseAnatomyTerm.find(@anat_ids).map { |x| x.term }.join(", ") %></span></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="container-fluid">
				<div class="row-fluid">
					<h3> Age Selection:</h3>
				</div>
				<div class="row-fluid" style="margin-bottom:20px">
					<label for="ages">Mice Ages (days):</label>
					<input type="text" id="ages" style="border: 0;  font-weight: bold;" />
					<div id="age-range"></div>
				</div>
				<div class="row-fluid">
					<label for="code">-OR- Select by code:</label>
					<select id="code">
						<option></option>
					<% if !@all_codes.nil? %>
						<% @all_codes.each do |code| %>
							<option><%= code %></option>
						<% end %>
					<% end %>
					</select>
				</div>
			</div>
		</div>
		<div id="sexes" class="span4 well">
			<div class="container-fluid">
				<div class="row-fluid">
					<h3> Sex Selection:</h3>
				</div>
				<div class="row-fluid">
					<div class="span6">
						<img id="M_mouse" src="/assets/blue-mouse.svg" width="65px" style="position: relative; padding:15px;">
						Male
					</div>
					<div class="span6">
						<img id="F_mouse" src="/assets/pink-mouse.svg" width="65px" style="position: relative; padding:15px;">
						Female
					</div>
				</div>
			</div>
		</div>
	</div>
	<hr>
	<div class="row-fluid">
		<center><h1 id="no-results" style="display:none;"> There are no results for this phenotype </h1></center>
		<div id="chart" class="span12" style="height: 450px;"></div>
	</div>
</div> <!-- /container -->

<div id="submit-left" onClick="window.location.href = 'index';">
	<span id="submit-left-tooltip" rel="tooltip" data-placement="right" data-original-title="Reselect Phenotype" >
		<img src="/assets/go-left.png"></img>
	</span>
</div>
<div id="submit-right">
	<a href="#" id="submit-right-tooltip" rel="tooltip" data-placement="left" data-original-title="Use This Data">
		<img src="/assets/go-right.png"></img>
	</a>
</div>


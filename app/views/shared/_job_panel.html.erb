
<% user ||= @user %>
<% viewer ||= user %>
<% jobs ||= @jobs %>
<% show_listing_on_load ||= false %>
<div class="row-fluid title-bar">
	<div class="drop-panel">
		<i id="collapse-jobs" class="icon-chevron-down"></i>
	</div>
	<div class="title-panel">
		<span class="title"> Jobs </span>
	</div>
	<div class="icon-panel">
		<i class="icon-number"> <%= viewer.jobs.count %> </i>
		
		<i class="icon-plus" data-toggle="modal" data-target="#new-job"></i>
		<i class="disabled icon-list"></i>

	</div>
</div>

<div id="new-job" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>New Job</h3>
	</div>
	<div class="modal-body" style="overflow: visible;">
	<p> Jobs are created when data is submitted to one of the tools for analysis.
		Jobs can be shared in the job panel once they have been created. </p>
	<p> Click the 'Show' to see the available tools. </p>

	</div>
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal" data-target="#new-job">Close</a>
		<a href="#" class="btn btn-primary" onclick="window.location = '<%= user_path(user) %>'">Show</a>
	</div>
</div>

<div id="job-listing" <% if not show_listing_on_load %> style="display:none;" <% end %>>
	<% if jobs.any? %>
	<ol class="jobs">
		<%= render :partial =>'shared/job', collection: jobs %>
	</ol>
	<%= will_paginate jobs, :param_name => 'jobs_paginate' , :inner_window => 1, :outer_window => 1 %>
	<% end %>
</div>


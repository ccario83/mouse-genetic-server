
								<li id="<%= micropost.id %>" class="clear-fix">
									<div class="container-fluid" style="padding:0px;">
										<div class="row-fluid">
											<div class="span2">
												<%= gravatar_for(micropost.creator) %>
											</div>
											<div class="content span9">
												<%= micropost.content %>
											<div>
										</div>
										
										<span class="timestamp">
												Posted <%= time_ago_in_words(micropost.created_at) %> ago.
										</span>
										<span class="text-links">
										<% if current_user?(micropost.creator) %>
												<%= link_to "Delete", micropost, :data => { :method => :delete, :confirm => "You sure?", :title => micropost.content } %>
										<% end %>
										</span>
									</div>
								</li>

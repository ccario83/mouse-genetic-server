
					<%= simple_form_for(micropost, :html => { :class => '' } ) do |f| %>
						<%= f.input :content, :label => false, :as => :text, :placeholder => "Compose a new micropost...", :input_html => { :rows => 4, :style => 'margin-bottom:0px; width:65%;' }, :required => false %>

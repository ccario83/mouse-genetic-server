
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h3>New Task</h3>
			</div>
			<div class="modal-body">
				<%= simple_form_for(task, :html => { :id => 'contact_form', :class => 'form-horizontal', :style => 'margin:0px; width: 95%;' } ) do |f| %>
					<%= f.input :description, :label => "Task", :as => :text, :placeholder => "Compose a new task...", :input_html => { :rows => 1, :style => 'margin-bottom:0px; width:65%; float:left;' } %>
					<%= f.input :group_id,  %>
				</fieldset>
				<% end %>
				<div class="modal-footer">
					<button class="btn btn-primary" onclick="submitNewTask()">Create</button>
				</div>
			</div>
		
		
		




<% task ||= @task %>
<% group ||= @group %>
<% members ||= @members %>
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>New Task</h3>
</div>
<div class="modal-body">
	<%= simple_form_for task, :url => group_tasks_path(group, task), :remote => true, do |f| %>
		<%= f.input :description, :label => "Task", :as => :text, :placeholder => "Compose a new task...", :input_html => { :style => 'width:500px;', :rows => 1 } %>
		<div class="control-group datetime required">
			<label class="datetime required control-label" for="due_date">Due date</label>
			<div class="controls">
				<div id="duedate" name="task[due_date]" class="input-append">
					<input name="task[due_date]" type="text" style="width: 474px;"></input>
					<span class="add-on">
						<i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
					</span>
				</div>
			</div>
		</div>
		<%= f.input :assignee_id, collection: members, :input_html => { :style => 'width:515px;' } %>
		<%= f.input :group_id, :as => :hidden %>
		<%= f.input :creator_id, :as => :hidden %>
	<% end %>
</div>
<div class="modal-footer">
	<input type="submit" class="btn btn-primary" value="Create">
</div>





			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h3>New Task</h3>
			</div>
			<div class="modal-body">
				<%= simple_form_for(task, :html => { :id => 'task_form', :class => 'form-horizontal', :style => 'margin:0px; width: 100%;' } ) do |f| %>
					<%= f.input :description, :label => "Task", :as => :text, :placeholder => "Compose a new task...", :input_html => { :rows => 1, :style => 'width:245px;' } %>
					<div class="control-group datetime required">
						<label class="datetime required control-label" for="due_date">Due date</label>
						<div class="controls">
							<div id="duedate" name="task[due_date]" class="input-append">
								<input name="task[due_date]" type="text" style="width:219px;"></input>
								<span class="add-on">
									<i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
								</span>
							</div>
						</div>
					</div>
					<%= f.input :assignee_id, collection: members, :input_html => { :style => 'width:258px;' } %>
					<%= f.input :group_id, :as => :hidden %>
					<%= f.input :creator_id, :as => :hidden %>
				</fieldset>
				
				<div class="modal-footer">
					<input type="submit" class="btn btn-primary" value="Create">
				</div>
				<% end %>
			</div>
		
		
		



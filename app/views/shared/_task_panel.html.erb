
<% tasks ||= @tasks %>
<% members ||= @members %>
<% show_listing_on_load ||= false %>
<div class="row-fluid title-bar">
	<div class="drop-panel">
		<i id="collapse-tasks" class="icon-chevron-down"></i>
	</div>
	<div class="title-panel">
		<span class="title"> Tasks </span>
	</div>
	<div class="icon-panel">
		<i class="icon-number"> <%= viewer.tasks.count %> </i>
		
		<i id="add-group" class="icon-plus" onclick="$('#new-task').modal('show'); return false;"></i>
		<i class="disabled icon-edit"></i>
		<i class="disabled icon-share"></i>
	</div>
</div>

<div id="new-task" class="modal hide fade">
	<%= render 'shared/task_form' %>
</div>

<div id="task-listing">
	<% if tasks.any? %>
	<ol class="tasks">
		<%= render :partial =>'shared/task', :collection => tasks %>
	</ol>
	<%= will_paginate tasks, :param_name => 'tasks_paginate' , :inner_window => 1, :outer_window => 1 %>
	<% end %>
</div>


<% flash.each do |alert_type, notice| %>
flash_notice("<%= notice %>", "<%= alert_type %>");
<% end %>

$("#task-panel").html("<%= escape_javascript(render :partial => 'shared/task_panel', :locals => { viewer: @viewer, show_listing_on_load: @show_listing_on_load, show_filters: true }) %>");

// Reattach the :remote=>true form submit functionality
attach_submit('#new-task');

<% if @show_listing_on_load == false %>
rotate($('#collapse-tasks'), 0, -5, -90);
<% end %>

$('#duedate').datetimepicker(
{
	language: 'en',
	format: 'yyyy-MM-dd hh:mm',
	pick12HourFormat: false,
	pickSeconds: false
});
// Reattach the :remote=>true form submit functionality
attach_submit('#new-task');




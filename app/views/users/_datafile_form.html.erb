
<% datafile ||= @datafile %>
<% user ||= @user %>
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>New Datafile</h3>
</div>
<div class="modal-body" style="overflow: visible;">
	<%= simple_form_for :datafile, :url => user_datafiles_path(user), :html => { :class => '', :multipart => true } do |f| %>
		<%= f.input :description, :label => 'Description', :required => false, :input_html => { :style => 'width:500px;', :rows => 5 } %>
		<%= f.input :datafile, :as => :file, :label => 'File:', :required => true %>
</div>
<div class="modal-footer">
	<input type="submit" class="btn btn-primary" value="Create">
</div>
	<% end %>
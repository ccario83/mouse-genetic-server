
<% groups ||= @groups %>
<% type ||= 'groups' %>
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>Manage Your Groups</h3>
</div>
<div class="modal-body">

	<div id="edit-groups-listings">
		<table id="managed-<%= type %>" class="<%= type %> content" style="display:none;">
		<% for group in groups do %>
			<%= render :partial => 'users/group_management', :locals => { :group => group } %>
		<% end %>
		</table>
	</div>
	
	<div class="modal-footer" style="padding: 10px;">
		<div class="row-fluid" style="text-align:left;">
			<div class="span9">
				<div class="row-fluid">
					<div class="span6">
						<i class="icon-thumbs-up"></i>  Accept Membership
					</div>
					<div class="span6">
						<i class="icon-signout"></i>  Leave Group
					</div>
				</div>
				<div class="row-fluid">
					<div class="span6">
						<i class="icon-thumbs-down"></i>  Decline Membership
					</div>
					<div class="span6">
						<i class="icon-remove"></i>  Delete Group
					</div>
				</div>
			</div>
		
			<div class="span3">
				<button id="group-management-modal-close" type="button" class="btn btn-primary" data-dismiss="modal" style="float:right;margin-top:15px;">Close</button>
			</div>
		</div>
	</div>
</div>

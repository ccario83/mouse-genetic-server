
<div class="row-fluid">
	<div class="span12">
		<div class="row-fluid">
			<%= render 'user_info', user: user %>
		</div>
		<div class="row-fluid">
			<%= render 'shared/stats', user: user %>
		</div>
	</div>
</div>
<hr>

<div class="row-fluid title-bar">
	<div class="drop-panel">
		<i id="collapse-datafiles" class="icon-chevron-down"></i>
	</div>
	<div class="title-panel">
		<span class="title"> Data (<%= current_user.datafiles.count %>)</span>
	</div>
	<div class="icon-panel">
		<i id="share-job" class="icon-share"></i>
		<i id="add-data" class="icon-plus"></i>
	</div>
</div>
<div id="new-data" class="modal hide fade">
	
</div>
<div id= "datafile-listing" class="row-fluid">
	<%= render 'shared/datafile_listing', datafiles: datafiles %>
</div>
<hr>

<div class="row-fluid title-bar">
	<div class="drop-panel">
		<i id="collapse-jobs" class="icon-chevron-down"></i>
	</div>
	<div class="title-panel">
		<span class="title"> Jobs (<%= current_user.jobs.count %>)</span>
	</div>
	<div class="icon-panel">
		<i id="share-job" class="icon-share"></i>
		<i id="add-job" class="icon-plus"></i>
	</div>
</div>
<div id= "job-listing" class="row-fluid">
	<%= render 'shared/job_listing', jobs: jobs %>
</div>

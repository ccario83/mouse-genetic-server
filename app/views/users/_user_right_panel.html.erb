
<% user ||= @user %>
<% confirmed_groups ||= @confirmed_groups %>
<% associated_users ||= @associated_users %>
<div class="row-fluid title-bar">
	<div class="drop-panel">
		<i id="collapse-microposts" class="icon-chevron-down"></i>
	</div>
	<div class="title-panel">
		<span class="title"> Microposts (<%= user.all_received_posts.count %>)</span>
	</div>
	<div class="icon-panel">
		<i id="add-group" class="icon-plus" onclick="$('#new-post').modal('show'); return false;"></i>
	</div>
</div>
<div id="new-post" class="modal hide fade">
	<%= render 'shared/micropost_form', groups: confirmed_groups, users: associated_users, show_filters: true %>
</div>
<div id="micropost-listing" class="row-fluid">
	<%= render 'shared/micropost_listing' %>
</div>

<% @page_title = "Edit user" %>

<% content_for :page_css do %>
<% end %>
<% content_for :page_js do %>
<% end %>

				<div class="span4 offset4">
					<h1 style="text-align:center">Update your profile</h1>
					<%= simple_form_for(@user, :html => { :class => 'form-horizontal' } ) do |f| %>
						<%= f.input :first_name, :label => 'First Name' %>
						<%= f.input :last_name, :label => 'Last Name' %>
						<%= f.input :institution, :label => 'Institution' %>
						<%= f.input :email, :label => 'Email' %>
						<%= f.input :password, :label => 'Password' %>
						<%= f.input :password_confirmation, :label => 'Password Confirmation' %>
						<div class="control-group string">
							<label class="string control-label" for="gravatar">Gravatar</label>
							<div class="controls">
								<%= gravatar_for @user %>
								<%= gravatar_edit_for @user %>
							</div>
						</div>
						<%= f.button :wrapped, 'Update' %>
					<% end %>
				</div>

				<div class="row span4 offset4">
				<h1>Sign up</h1>
					<%= simple_form_for(@user, :html => { :class => 'form-horizontal' } ) do |f| %>
						<%= f.input :first_name, :label => 'First Name', :required => false %>
						<%= f.input :last_name, :label => 'Last Name', :required => false %>
						<%= f.input :institution, :label => 'Institution', :required => false %>
						<%= f.input :email, :label => 'Email', :required => false %>
						<%= f.input :password, :label => 'Password', :required => false %>
						<%= f.input :password_confirmation, :label => 'Password Confirmation', :required => false %>
						<%= f.button :wrapped, 'Create' %>	
					<% end %>
				</div>

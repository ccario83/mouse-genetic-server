<% content_for :page_css do %>
<% end %>
<% content_for :page_js do %>
<% end %>

				<div class="row span10 offset2">
					<h1>
						<%= gravatar_for @user %>
						<%= @user.name %>
					</h1>
				</div>
				<br />
				<div class="row span10 offset2">
					<h3>Microposts (<%= @user.microposts.count %>)</h3>
					<% if @user.microposts.any? %>
					<ol class="microposts">
						<%= render @microposts %>
					</ol>
					<%= will_paginate @microposts %>
					<% end %>
				</div>
